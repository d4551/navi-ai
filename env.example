# NAVI Job Board API Configuration
# Copy this file to .env.local and fill in your API keys

# ========================================
# Live Job API Keys
# ========================================

# Adzuna Jobs API (Free tier available)
# Get your API key at: https://developer.adzuna.com/
VITE_ADZUNA_API_KEY=your-adzuna-api-key-here
VITE_ADZUNA_APP_ID=your-adzuna-app-id-here

# JSearch API via RapidAPI (500 free requests/month)
# Get your API key at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch/
VITE_RAPIDAPI_KEY=your-rapidapi-key-here

# Reed.co.uk API (UK jobs, 1000 free requests/month)
# Get your API key at: https://www.reed.co.uk/developers/
VITE_REED_API_KEY=your-reed-api-key-here

# ========================================
# AI/ML Service APIs (for job matching)
# ========================================

# Google Gemini API (for AI-powered job analysis)
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API (optional, for additional AI features)
VITE_OPENAI_API_KEY=your-openai-api-key-here

# ========================================
# Optional APIs (for enhanced functionality)
# ========================================

# GitHub API (for developer job matching)
VITE_GITHUB_TOKEN=your-github-token-here

# LinkedIn API (for professional profile integration)
VITE_LINKEDIN_CLIENT_ID=your-linkedin-client-id
VITE_LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ========================================
# Application Configuration
# ========================================

# App Environment
VITE_NODE_ENV=development

# Node-RED Integration
# Base URL of your Node-RED instance (optional; defaults to http://localhost:1880)
VITE_NODE_RED_BASE_URL=http://localhost:1880

# API Rate Limiting
VITE_API_RATE_LIMIT_ENABLED=true
VITE_API_CACHE_DURATION=600000  # 10 minutes in milliseconds

# Job Board Settings
VITE_DEFAULT_JOB_LIMIT=50
VITE_MAX_SEARCH_RESULTS=200
VITE_AUTO_REFRESH_INTERVAL=1800000  # 30 minutes in milliseconds

# Gaming Job Board Focus
VITE_GAMING_FOCUS_ENABLED=true
VITE_GAMING_RELEVANCE_THRESHOLD=0.3

# Real-time Features
VITE_WEBSOCKET_ENABLED=false
VITE_PUSH_NOTIFICATIONS_ENABLED=false

# ========================================
# Development/Debug Settings
# ========================================

VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info  # debug, info, warn, error
VITE_MOCK_DATA_ENABLED=true  # Enable mock data when APIs are unavailable
